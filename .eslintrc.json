{
  "root": true,
  "env": { "es2022": true, "node": true, "jest": true, "browser": true },
  "extends": ["eslint:recommended"],
  "parserOptions": { "ecmaVersion": 2022, "sourceType": "module" },
  "ignorePatterns": ["dist/", "build/"],
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "prefer-const": "warn"
  }
}