version: "3.9"
services:
  mongo:
    image: mongo:6
    container_name: mongo
    ports:
      - "27017:27017"
    healthcheck:
      test: ["CMD","mongosh","--quiet","--eval","db.runCommand({ ping: 1 }).ok"]
      interval: 10s
      timeout: 5s
      retries: 5

  backend:
    build:
      context: .
      dockerfile: backend/Dockerfile
    container_name: backend
    env_file:
      - backend/.env
    environment:
      MONGODB_URI: mongodb://mongo:27017/herbs
      PORT: 4000
      NODE_ENV: production
    depends_on:
      - mongo
    ports:
      - "4000:4000"
    healthcheck:
      test: ["CMD","wget","-q","-O","-","http://localhost:4000/healthz"]
      interval: 10s
      timeout: 5s
      retries: 12